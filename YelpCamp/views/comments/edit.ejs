<% include ../partials/header %>

<div class="container">
  <h1 style="text-align: center; margin: 20px">Edit comment</h1>
  <div class="row">
    <div style="width: 30%; margin: 25px auto">
      <form class="" action="/campgrounds/<%=campground_id%>/comments/<%= comment._id %>?_method=PUT" method="post">
        <div class="form-group">
          <input id="campName" class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit" name="button">Submit!</button>
      </form>

      <a href="/campgrounds">Go Back</a>
    </div>

  </div>

</div>



