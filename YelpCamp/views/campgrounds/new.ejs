<% include ../partials/header %>

<div class="container">
  <h1 style="text-align: center; margin: 20px">Create a New Campground</h1>
  <div class="row">
    <div style="width: 30%; margin: 25px auto">
      <form class="" action="/campgrounds" method="post">
        <div class="form-group">
          <input id="campName" class="form-control" type="text" name="name" placeholder="name">
        </div>
        <div class="form-group">
          <input id="imageURL" class="form-control" type="text" name="image" placeholder="image url">
        </div>
        <div class="form-group">
          <input id="campDescription" class="form-control" type="text" name="description" placeholder="description">
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit" name="button">Submit!</button>
      </form>

      <a href="/campgrounds">Go Back</a>
    </div>

  </div>

</div>



