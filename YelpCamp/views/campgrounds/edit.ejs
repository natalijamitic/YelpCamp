<% include ../partials/header %>

<div class="container">
  <h1 style="text-align: center; margin: 20px">Edit <%= campground.name %></h1>
  <div class="row">
    <div style="width: 30%; margin: 25px auto">
      <form class="" action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
        <div class="form-group">
          <input id="campName" class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <input id="campPrice" class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <input id="imageURL" class="form-control" type="text" name="campground[image]" value ="<%= campground.image %>">
        </div>
        <div class="form-group">
          <input id="campDescription" class="form-control" type="text" name="campground[description]" value ="<%= campground.description %>">
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit" name="button">Submit!</button>
      </form>

      <a href="/campgrounds">Go Back</a>
    </div>

  </div>

</div>



<% include ../partials/footer %>
